{
  "version": "0.2.0",
  "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main Dev",
            "protocol": "inspector",
            "preLaunchTask": "build: dev",
            "program": "${workspaceRoot}/build/main.js",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "runtimeArgs": [
                "--remote-debugging-port=9223",
                "."
            ],
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "sourceMaps": true
        },
        {
            "name": "Electron: Renderer",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000,
            "trace": true,
            "sourceMaps": true,
            "smartStep": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main Prod",
            "protocol": "inspector",
            "preLaunchTask": "build: prod",
            "program": "${workspaceRoot}/build/main.js",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "runtimeArgs": [
                "--remote-debugging-port=9223",
                "."
            ],
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "sourceMaps": true
        },
  ],
  "compounds": [
      {
          "name": "Electron: All Development",
          "configurations": [
              "Electron: Main Dev",
              "Electron: Renderer"
          ]
      },
      {
        "name": "Electron: All Production",
        "configurations": [
            "Electron: Main Prod",
            "Electron: Renderer"
        ]
    }
  ]
}