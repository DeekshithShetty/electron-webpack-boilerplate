{
  "version": "0.2.0",
  "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main",
            "protocol": "inspector",
            "preLaunchTask": "build: dev:watch", // modify this based on env. Refer tasks.json
            "program": "${workspaceRoot}/build/main.js",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "runtimeArgs": [
                "--remote-debugging-port=9223",
                "."
            ],
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "sourceMaps": true
        },
        {
            "name": "Electron: Renderer",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000,
            "trace": true,
            "sourceMaps": true,
            "smartStep": true
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "build: unit: all",
            "name": "Unit Test: All",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha",
            "program": "${workspaceRoot}/build-test/specs.js",
            "args": [
                ".",
                "--renderer",
                 "--require", "source-map-support/register",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "preLaunchTask": "build: unit: single",
            "name": "Unit Test: Single",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha",
            "program": "${workspaceRoot}/build-test/specs.js",
            "args": [
                ".",
                "--renderer",
                 "--require", "source-map-support/register",
            ]
        },
  ],
  "compounds": [
      {
          "name": "Electron: All",
          "configurations": [
              "Electron: Main",
              "Electron: Renderer"
          ]
      }
  ]
}