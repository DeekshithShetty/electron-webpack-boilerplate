{
  "name": "electron-webpack-boilerplate",
  "productName": "Electron Webpack Boilerplate",
  "description": "Boilerplate application for Electron with webpack",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:DeekshithShetty/electron-webpack-boilerplate.git"
  },
  "private": true,
  "author": "Deekshith Shetty",
  "copyright": "Â© 2018 Saiyan Studio",
  "homepage": "https://github.com/DeekshithShetty/electron-webpack-boilerplate",
  "main": "build/main.js",
  "build": {
    "appId": "com.example.electron-webpack-boilerplate",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "internals/resources"
    },
    "publish": null,
    "asar": true,
    "npmRebuild": true,
    "artifactName": "${productName}_Setup_-${version}-${os}-${arch}.${ext}"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:eslint:staged"
    ],
    "*.css": [
      "npm run lint:css:staged"
    ]
  },
  "pre-commit": "lint:staged",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "npm run lint:eslint && npm run lint:css",
    "lint:css": "stylelint \"./app/**/*.css\" --color",
    "lint:css:staged": "stylelint --color",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint:eslint": "eslint . --color",
    "lint:eslint:staged": "eslint --color",
    "lint:eslint:fix": "npm run lint:eslint -- --fix",
    "lint:staged": "lint-staged",
    "prettify": "prettier --write",
    "preunit": "npm run unit:clean && webpack --config=internals/webpack/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "unit:clean": "rimraf ./temp",
    "pree2e": "webpack --config=internals/webpack/webpack.dev.config.js --env=test --display=none && webpack --config=internals/webpack/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run lint && npm run unit && npm run e2e",
    "prebuild:dev": "npm run build:clean",
    "build:dev": "webpack --display=minimal --config=internals/webpack/webpack.dev.config.js --env=development",
    "build:dev:watch": "npm run build:dev -- --watch",
    "prebuild:prod": "npm run build:clean",
    "build:prod": "webpack --display=minimal --config=internals/webpack/webpack.prod.config.js --env=production",
    "build:clean": "rimraf ./build",
    "electron": "electron . --remote-debugging-port=9222 --enable-logging",
    "start:dev": "npm run build:dev && npm run electron",
    "start:prod": "npm run build:prod && npm run electron",
    "start": "concurrently --raw --kill-others \"npm run start:dev\" \"npm run build:dev:watch\"",
    "prerelease:dev": "npm run release:clean",
    "release:dev": "npm run unit && npm run build:dev && electron-builder",
    "prerelease:prod": "npm run release:clean",
    "release:prod": "npm run unit && npm run build:prod && electron-builder",
    "release": "npm run release:prod",
    "release:clean": "rimraf ./dist"
  },
  "dependencies": {
    "fs-jetpack": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.3",
    "@babel/preset-env": "^7.0.0-rc.3",
    "@babel/register": "^7.0.0-rc.3",
    "babel-loader": "^8.0.0-beta.6",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "chai": "^4.1.0",
    "chokidar": "^2.0.4",
    "concurrently": "^3.6.1",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "electron": "2.0.3",
    "electron-builder": "^20.18.1",
    "electron-mocha": "^6.0.4",
    "electron-rebuild": "^1.7.3",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^2.6.2",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6",
    "spectron": "^3.8.0",
    "style-loader": "^0.21.0",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
